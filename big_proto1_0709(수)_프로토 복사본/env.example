# BigKinds News Concierge Environment Variables

# BigKinds API 설정
BIGKINDS_API_KEY=your_bigkinds_api_key_here

# AWS 설정
AWS_REGION=us-east-1
AWS_PROFILE=default

# WebSocket 설정 (배포 후 설정)
REACT_APP_WEBSOCKET_URL=wss://your-websocket-api-id.execute-api.us-east-1.amazonaws.com/dev

# AWS Bedrock 설정
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_REGION=us-east-1

# 애플리케이션 설정
STAGE=dev
DEBUG=false

# Redis 설정 (옵션)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 로깅 설정
LOG_LEVEL=INFO